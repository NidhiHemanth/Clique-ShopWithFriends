<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_room_code_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".RoomCodeScreen">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:keepScreenOn="true">

        <WebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5">

            <LinearLayout
                android:id="@+id/subscriberview0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight=".5"
                android:background="@drawable/rounded_bg_linear"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imageView0"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:foregroundGravity="clip_horizontal|center"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_account_circle_black_48dp" />

                <ToggleButton
                    android:id="@+id/toggleAudioSubscriber0"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/style_subscriber"
                    android:checked="true"
                    android:textOff=""
                    android:textOn=""
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subscriberview1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight=".5"
                android:background="@drawable/rounded_bg_linear"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:foregroundGravity="clip_horizontal|center"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_account_circle_black_48dp" />

                <ToggleButton
                    android:id="@+id/toggleAudioSubscriber1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/style_subscriber"
                    android:checked="true"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subscriberview3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight=".5"
                android:background="@drawable/rounded_bg_linear"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:foregroundGravity="clip_horizontal|center"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_account_circle_black_48dp" />

                <ToggleButton
                    android:id="@+id/toggleAudioSubscriber3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/style_subscriber"
                    android:checked="true"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/subscriberview2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight=".5"
                android:background="@drawable/rounded_bg_linear"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:foregroundGravity="clip_horizontal|center"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_account_circle_black_48dp" />

                <ToggleButton
                    android:id="@+id/toggleAudioSubscriber2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="false"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/style_subscriber"
                    android:checked="true"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_bg"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <ToggleButton
                android:id="@+id/toggleAudio"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:width="50dp"
                android:background="@drawable/style_provider"
                android:checked="false"
                android:maxWidth="50dp"
                android:minWidth="50dp"
                android:text=""
                android:textOff=""
                android:textOn="" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>